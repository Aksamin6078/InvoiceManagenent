@model IEnumerable<InvoiceManagenent.DTOs.ProductDto>

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Product List</h2>
    <hr />

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor((InvoiceManagenent.DTOs.ProductDto m) => m.ProductId)</th>
                    <th>@Html.DisplayNameFor((InvoiceManagenent.DTOs.ProductDto m) => m.ProductName)</th>
                    <th>@Html.DisplayNameFor((InvoiceManagenent.DTOs.ProductDto m) => m.Price)</th>
                    <th>@Html.DisplayNameFor((InvoiceManagenent.DTOs.ProductDto m) => m.Stock)</th>
                    <th>@Html.DisplayNameFor((InvoiceManagenent.DTOs.ProductDto m) => m.CategoryName)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Stock</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No products found. <a asp-action="Create">Create a new product</a>.
        </div>
    }
</div>
