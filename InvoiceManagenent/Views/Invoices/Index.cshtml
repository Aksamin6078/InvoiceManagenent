@model IEnumerable<InvoiceManagenent.DTOs.InvoiceDto>

@{
    ViewData["Title"] = "Invoices";
}

<h2>Invoices</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Invoice</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="customerName" class="form-control"
               placeholder="Search by customer name"
               value="@ViewData["CustomerName"]" />
        <button class="btn btn-outline-primary" type="submit">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.CustomerName</td>
                <td>@(invoice.Date.ToString("yyyy-MM-dd"))</td>
                <td>@(invoice.Total.ToString("C"))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@invoice.InvoiceId" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this invoice?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
