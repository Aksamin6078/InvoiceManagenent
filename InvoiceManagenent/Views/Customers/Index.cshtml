@model IEnumerable<InvoiceManagenent.DTOs.CustomerDto>
@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <h2>Customers</h2>
    <hr />
    <a asp-action="Create" class="btn btn-success mb-3">+ Add New Customer</a>
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone No</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this customer?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
